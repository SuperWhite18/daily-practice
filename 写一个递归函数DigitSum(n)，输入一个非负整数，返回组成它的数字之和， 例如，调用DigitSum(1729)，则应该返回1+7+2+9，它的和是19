#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>
#include<stdlib.h>
#include<string.h>
int DigitSum(int n) {
	if (n < 10) {         //递归结束条件
		return n;
	}
	return (n % 10) + DigitSum(n / 10);
}
int main() {
	int n = 0;
	printf("请输入一个正整数:\n");
	scanf("%d", &n);
	printf("%d\n", DigitSum(n));
	system("pause");
	return 0;
}
